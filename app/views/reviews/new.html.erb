<h1>Reviews#new</h1>
<p>Find me in app/views/reviews/new.html.erb</p>

<h2>new review for restaurant <%= @restaurant.name %></h2>

<%= simple_form_for([@restaurant, @review]) do |f| %>
    <%= f.input :content %>
    <%= f.input :rating, :collection => [0, 1, 2, 3, 4, 5], :selected => 0 %>
    <%= f.submit %>
  <% end %>
